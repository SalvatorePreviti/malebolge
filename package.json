{
  "name": "@gravitas/workspace",
  "version": "1.0.0",
  "description": "experimental setup",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --no-error-on-unmatched-pattern --fix . && prettier --write --log-level=warn .",
    "lint:ci": "eslint --no-error-on-unmatched-pattern . && prettier --check --log-level=warn .",
    "typecheck": "tscheck",
    "precommit": "lint-staged"
  },
  "author": "Salvatore Previti",
  "license": "MIT",
  "devDependencies": {
    "@balsamic/eslint-config": "^0.5.4",
    "@balsamic/tsn": "^0.0.1",
    "@swc/core": "^1.3.71",
    "@types/node": "^20.4.5",
    "@types/react": "^18.2.17",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.45.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6",
    "vite": "^4.4.7",
    "prettier": "^3.0.0"
  },
  "private": true,
  "engines": {
    "node": ">=12.20.0"
  },
  "keywords": [
    "@gravitas/workspace"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mts,cts,cjs,mjs,json}": [
      "eslint --no-error-on-unmatched-pattern --fix",
      "prettier --write --log-level=warn"
    ],
    "*.{yml,yaml,md,htm,html,css,scss,less}": [
      "prettier --write --log-level=warn"
    ]
  }
}
