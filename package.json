{
  "name": "@gravitas/workspace",
  "version": "1.0.0",
  "description": "experimental setup",
  "main": "index.js",
  "scripts": {
    "start": "vite",
    "lint": "eslint --no-error-on-unmatched-pattern --fix . && prettier --write --log-level=warn .",
    "lint:css": "stylelint --fix **/*.css **/*.less **/*.sass **/*.ts **/*.tsx",
    "lint:ci": "eslint --no-error-on-unmatched-pattern . && prettier --check --log-level=warn .",
    "typecheck": "tscheck",
    "precommit": "lint-staged"
  },
  "author": "Salvatore Previti",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "app"
  ],
  "private": true,
  "engines": {
    "node": ">=18.17.0"
  },
  "keywords": [
    "@gravitas/workspace"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mts,cts,cjs,mjs,json}": [
      "eslint --no-error-on-unmatched-pattern --fix",
      "prettier --write --log-level=warn"
    ],
    "*.{yml,yaml,md,htm,html,css,scss,less}": [
      "prettier --write --log-level=warn"
    ]
  },
  "dependencies": {
    "@gravitas/app": "*",
    "@gravitas/atom": "*",
    "@gravitas/atom-react": "*"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@balsamic/eslint-config": "^0.5.5",
    "@balsamic/tsn": "^0.0.2",
    "@linaria/babel-preset": "^4.5.4",
    "@linaria/postcss-linaria": "^4.5.1",
    "@linaria/stylelint-config-standard-linaria": "^4.5.1",
    "@linaria/vite": "^4.5.4",
    "@swc/core": "^1.3.72",
    "@types/babel-core": "^6.25.7",
    "@types/node": "^20.4.5",
    "@types/react": "^18.2.17",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "@vitejs/plugin-react": "^4.0.3",
    "eslint": "^8.46.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "stylelint": "^15.10.2",
    "stylelint-config-standard": "^34.0.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6",
    "vite": "^4.4.7"
  }
}
